{
  "env": {
    "API_TIMEOUT_MS": "600000",
    "ANTHROPIC_AUTH_TOKEN": "{{ (bitwarden "item" "vrouter-api-token").login.password }}",
    "ANTHROPIC_BASE_URL": "{{ (bitwarden "item" "vrouter-api-token").login.username }}",
    "ANTHROPIC_MODEL": "ag/claude-opus-4-5-thinking",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "ag/claude-opus-4-5-thinking",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "ag/claude-sonnet-4-5-thinking",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "ag/gemini-2.5-flash-lite[1m]",
    "CLAUDE_CODE_SUBAGENT_MODEL": "ag/claude-sonnet-4-5-thinking"
  },
  "permissions": {
    {{/* PERMISSIONS:START */}}
    "allow": [
      "Read(~/.claude/**)",
      "Read(//tmp/**)",
      "Edit(//tmp/**)",
      "Write(//tmp/**)",
      "Bash(basename:*)",
      "Bash(cargo add:*)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(cargo clean:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo info:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo metadata:*)",
      "Bash(cargo remove:*)",
      "Bash(cargo search:*)",
      "Bash(cargo test:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo update:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(cut:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(gofmt:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm info:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm run build:*)",
      "Bash(pwd:*)",
      "Bash(sort:*)",
      "Bash(tree:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "mcp__mcp-server-github__get_file_contents",
      "mcp__mcp-server-github__search_code",
      "Skill",
      "WebFetch",
      "WebSearch"
    ],
    "ask": [
      "Bash(trash:*)"
    ],
    "deny": [
      "Bash(sudo:*)"
    ],
    "additionalDirectories": [
      "//tmp"
    ]
    {{/* PERMISSIONS:END */}}
  },
  "defaultMode": "default",
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true,
    "context7@claude-plugins-official": true
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
{{- if eq .chezmoi.os "darwin" }}
            "command": "bash -lc 'afplay /System/Library/Sounds/Ping.aiff'"
{{- else if eq .chezmoi.os "windows" }}
            "command": "pwsh -c \"[System.Media.SystemSounds]::Asterisk.Play()\""
{{- else }}
            "command": "paplay /usr/share/sounds/freedesktop/stereo/complete.oga"
{{- end }}
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
{{- if eq .chezmoi.os "darwin" }}
            "command": "bash -lc 'afplay /System/Library/Sounds/Ping.aiff'"
{{- else if eq .chezmoi.os "windows" }}
            "command": "pwsh -c \"[System.Media.SystemSounds]::Asterisk.Play()\""
{{- else }}
            "command": "paplay /usr/share/sounds/freedesktop/stereo/complete.oga"
{{- end }}
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
{{- if eq .chezmoi.os "windows" }}
            "command": "$HOME\\.claude\\hooks\\agent_hooks_claude.exe pre-tool-use --deny-rust-allow --expect"
{{- else }}
            "command": "$HOME/.claude/hooks/agent_hooks_claude pre-tool-use --deny-rust-allow --expect"
{{- end }}
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
{{- if eq .chezmoi.os "windows" }}
            "command": "$HOME\\.claude\\hooks\\agent_hooks_claude.exe pre-tool-use --check-package-manager"
{{- else }}
            "command": "$HOME/.claude/hooks/agent_hooks_claude pre-tool-use --check-package-manager"
{{- end }}
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
{{- if eq .chezmoi.os "windows" }}
            "command": "$HOME\\.claude\\hooks\\agent_hooks_claude.exe permission-request --block-rm --confirm-destructive-find"
{{- else }}
            "command": "$HOME/.claude/hooks/agent_hooks_claude permission-request --block-rm --confirm-destructive-find"
{{- end }}
          }
        ]
      }
    ]
  }
}
