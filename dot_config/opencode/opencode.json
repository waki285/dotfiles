{
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "basename": "allow",
      "basename *": "allow",
      "cargo add": "allow",
      "cargo add *": "allow",
      "cargo build": "allow",
      "cargo build *": "allow",
      "cargo check": "allow",
      "cargo check *": "allow",
      "cargo clean": "allow",
      "cargo clean *": "allow",
      "cargo clippy": "allow",
      "cargo clippy *": "allow",
      "cargo info": "allow",
      "cargo info *": "allow",
      "cargo fmt": "allow",
      "cargo fmt *": "allow",
      "cargo metadata": "allow",
      "cargo metadata *": "allow",
      "cargo remove": "allow",
      "cargo remove *": "allow",
      "cargo search": "allow",
      "cargo search *": "allow",
      "cargo test": "allow",
      "cargo test *": "allow",
      "cargo tree": "allow",
      "cargo tree *": "allow",
      "cargo update": "allow",
      "cargo update *": "allow",
      "cat": "allow",
      "cat *": "allow",
      "cd": "allow",
      "cd *": "allow",
      "cut": "allow",
      "cut *": "allow",
      "echo": "allow",
      "echo *": "allow",
      "grep": "allow",
      "grep *": "allow",
      "head": "allow",
