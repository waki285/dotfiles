      "passwd": "deny",
      "passwd *": "deny",
      "reboot": "deny",
      "reboot *": "deny",
      "shred": "deny",
      "shred *": "deny",
      "shutdown": "deny",
      "shutdown *": "deny",
      "srm": "deny",
      "srm *": "deny",
      "sudo": "deny",
      "sudo *": "deny",
      "truncate": "deny",
