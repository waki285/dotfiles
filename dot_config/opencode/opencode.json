{
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "basename": "allow",
      "basename *": "allow",
      "cargo add": "allow",
      "cargo add *": "allow",
      "cargo build": "allow",
      "cargo build *": "allow",
      "cargo check": "allow",
      "cargo check *": "allow",
      "cargo clean": "allow",
      "cargo clean *": "allow",
      "cargo clippy": "allow",
      "cargo clippy *": "allow",
      "cargo info": "allow",
      "cargo info *": "allow",
      "cargo fmt": "allow",
      "cargo fmt *": "allow",
      "cargo metadata": "allow",
      "cargo metadata *": "allow",
      "cargo remove": "allow",
      "cargo remove *": "allow",
      "cargo search": "allow",
      "cargo search *": "allow",
      "cargo test": "allow",
      "cargo test *": "allow",
      "cargo tree": "allow",
      "cargo tree *": "allow",
      "cargo update": "allow",
      "cargo update *": "allow",
      "cat": "allow",
      "cat *": "allow",
      "cd": "allow",
      "cd *": "allow",
      "cut": "allow",
      "cut *": "allow",
      "echo": "allow",
      "echo *": "allow",
      "grep": "allow",
      "grep *": "allow",
      "head": "allow",
      "head *": "allow",
      "gh release list": "allow",
      "gh release list *": "allow",
      "gh release view": "allow",
      "gh release view *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "gofmt": "allow",
      "gofmt *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "mkdir": "allow",
      "mkdir *": "allow",
      "npm info": "allow",
      "npm info *": "allow",
      "pnpm add": "allow",
      "pnpm add *": "allow",
      "pnpm build": "allow",
      "pnpm build *": "allow",
      "pnpm install": "allow",
      "pnpm install *": "allow",
      "pnpm run build": "allow",
      "pnpm run build *": "allow",
      "pwd": "allow",
      "pwd *": "allow",
      "sort": "allow",
      "sort *": "allow",
      "tree": "allow",
      "tree *": "allow",
      "uniq": "allow",
      "uniq *": "allow",
      "wc": "allow",
      "wc *": "allow",
      "trash": "ask",
      "trash *": "ask",
      "find * -delete": "ask",
      "find * -exec * rm *": "ask",
      "find * -exec * rmdir *": "ask",
      "find * -execdir * rm *": "ask",
      "find * -execdir * rmdir *": "ask",
      "find * -ok * rm *": "ask",
      "find * -ok * rmdir *": "ask",
      "find * -exec * mv *": "ask",
      "xargs rm *": "ask",
      "xargs rmdir *": "ask",
      "sudo": "deny",
      "sudo *": "deny"
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
