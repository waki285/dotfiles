{
  "agentHooks": {
    "allowExpect": true
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "permission": {
    "bash": {
      "*": "allow",
      "find * -delete": "ask",
      "find * -exec * rm *": "ask",
      "find * -exec * rmdir *": "ask",
      "find * -execdir * rm *": "ask",
      "find * -execdir * rmdir *": "ask",
      "find * -ok * rm *": "ask",
      "find * -ok * rmdir *": "ask",
      "find * -exec * mv *": "ask",
      "xargs rm *": "ask",
      "xargs rmdir *": "ask"
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
