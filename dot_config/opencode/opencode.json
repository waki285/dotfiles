      "git status": "allow",
      "git status *": "allow",
      "gofmt": "allow",
      "gofmt *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "mkdir": "allow",
      "mkdir *": "allow",
      "npm info": "allow",
      "npm info *": "allow",
      "pnpm add": "allow",
      "pnpm add *": "allow",
      "pnpm build": "allow",
      "pnpm build *": "allow",
      "pnpm i": "allow",
      "pnpm i *": "allow",
      "pnpm install": "allow",
