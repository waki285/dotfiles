      "kill": "ask",
      "kill *": "ask",
      "killall": "ask",
      "killall *": "ask",
      "pkill": "ask",
      "pkill *": "ask",
      "trash": "ask",
      "trash *": "ask",
      "unlink": "ask",
      "unlink *": "ask",
      "find * -delete": "ask",
      "find * -exec * rm *": "ask",
      "find * -exec * rmdir *": "ask",
      "find * -execdir * rm *": "ask",
      "find * -execdir * rmdir *": "ask",
      "find * -ok * rm *": "ask",
